div.nav {
    width: 100%;
    float: left;
    margin 0 0 lem 0;
    padding: 0;
    background-color: #7A991A;
    border-bottom: 1px solid #ccc;
}
div.nav ul {
    list-style: none;
    width 800px;
    margin: 0 auto;
    padding: 0;
}
div.nav li {
    margin-left: auto;
    margin-right: auto;
    float: left;
}
div.nav li a {
    display: block;
    font-weight: bold;
    padding: 8px 15px;
    text-decoration: none;
    color #069;
    text-align: center;
    /*background-color: #2600FF;*/
    border-right: 1px solid #ccc;
}
div.nav li:first-child a {
    border-left: 1px solid #ccc;
}
div.nav li a:hover {
    color: #c00;
    background-color: #fff;
}
